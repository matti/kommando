#!/usr/bin/env bash
git diff-index --quiet --cached HEAD
if [[ $? != 0 ]]; then
  echo "git dirty."
  exit 1
fi

set -e

rake; rake; rake
bin/e2e
bin/matrix 3
bin/stress 2 10

echo
head CHANGELOG.md
echo
echo "Changelog ok?"
read

bin/version
echo "Version ok?"
read

echo "Release to rubygems?"
read
echo "Sure?"
read
echo "Double sure?"
bundle exec rake release
